<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bwisni.pub1521.MainActivity"
    android:background="@color/background_material_dark"
    android:orientation="vertical"
    tools:showIn="@layout/activity_main"
    android:focusable="true"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="1"
        android:layout_gravity="center_horizontal"
        android:id="@+id/gridLayout"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="OVER "
            android:id="@+id/textView"
            android:gravity="center_horizontal"
            android:textSize="@dimen/abc_text_size_display_3_material"
            android:textColor="@color/primary_text_default_material_dark"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="false"
            android:layout_alignEnd="@+id/numServedTextView"
            android:layout_row="0"
            android:layout_column="0" />

        <TextSwitcher
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/numServedTextView"
            android:layout_alignParentEnd="true"
            android:gravity="center_horizontal"
            android:textSize="@dimen/abc_text_size_display_3_material"
            android:textColor="@color/primary_text_default_material_dark"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView3"
            android:layout_column="1"
            android:layout_row="0">

        </TextSwitcher>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=" SERVED"
            android:id="@+id/textView3"
            android:gravity="center_horizontal"
            android:textSize="@dimen/abc_text_size_display_3_material"
            android:textColor="@color/primary_text_default_material_dark"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_row="0" />

    </GridLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:layout_below="@+id/gridLayout"
        >

        <pl.droidsonroids.gif.GifTextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/fireView"
            android:background="@drawable/mainactivity_background2"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" />

        <ViewFlipper
            android:layout_width="250dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/slideshow"
            android:layout_alignParentBottom="true"
            android:layout_height="140dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/slideshow"
            android:layout_toEndOf="@+id/slideshow">

            <ImageButton
                android:layout_width="@dimen/camera_icon_size"
                android:layout_height="@dimen/camera_icon_size"
                app:srcCompat="@android:drawable/ic_menu_camera"
                android:layout_centerHorizontal="true"
                android:id="@+id/cameraButton"
                android:layout_alignTop="@+id/slideshow"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="1"
            android:layout_height="@dimen/graphsLayoutHeight">

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:id="@+id/relativeLayout"
                android:layout_alignBottom="@+id/graph">

                <lecho.lib.hellocharts.view.ColumnChartView
                    android:layout_width="109.5dip"
                    android:layout_height="150dip"
                    android:id="@+id/kegGraph"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:layout_width="109.5dip"
                    android:layout_height="150dip"
                    android:id="@+id/imageView"
                    android:src="@drawable/keg_outline"
                    android:visibility="visible"
                    android:layout_alignEnd="@+id/kegGraph"
                    android:layout_alignStart="@+id/kegGraph"
                    android:layout_centerInParent="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/kegTextView"
                    android:layout_alignParentStart="false"
                    android:layout_alignStart="@+id/imageView"
                    android:layout_alignEnd="@+id/kegGraph"
                    android:layout_alignTop="@+id/kegGraph"
                    android:layout_alignBottom="@+id/kegGraph"
                    android:textSize="@dimen/abc_text_size_display_3_material"
                    android:textAlignment="center" />

            </RelativeLayout>

            <lecho.lib.hellocharts.view.ComboLineColumnChartView
                android:layout_height="match_parent"
                android:id="@+id/graph"
                android:layout_toStartOf="@+id/pieChart"
                android:layout_width="575dp" />

            <lecho.lib.hellocharts.view.PieChartView
                android:id="@+id/pieChart"
                android:layout_width="@dimen/pieChartWidth"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/graph" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/AdminLayout"
        android:layout_alignParentTop="true"
        android:background="@color/primary_material_dark"
        android:visibility="invisible">

        <TabHost
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tabHost"
            android:theme="@style/AppTheme">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tabStripEnabled="false"
                    android:theme="@style/AppTheme"
                    android:animateLayoutChanges="false"
                    android:alwaysDrawnWithCache="false"
                    android:fadingEdge="horizontal"/>

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/adminTab1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="."
                            android:id="@+id/adminModeTextView"
                            android:gravity="center_horizontal"
                            android:textSize="@dimen/abc_text_size_display_3_material"
                            android:textColor="@color/primary_material_dark"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/kegEditText"
                            android:textSize="@dimen/abc_text_size_display_3_material"
                            android:gravity="center_horizontal"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@+id/adminModeTextView"
                            android:descendantFocusability="beforeDescendants"
                            android:focusableInTouchMode="true"
                            android:selectAllOnFocus="false" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Adjust Keg Level"
                            android:id="@+id/adjustKegButton"
                            android:layout_below="@+id/kegEditText"
                            android:layout_alignParentStart="true"
                            android:layout_alignEnd="@+id/kegEditText"
                            android:textSize="@dimen/abc_text_size_display_1_material"
                            android:visibility="gone" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Keg"
                            android:id="@+id/newKegButton"
                            android:layout_below="@+id/adjustKegButton"
                            android:layout_alignParentStart="true"
                            android:layout_alignEnd="@+id/adjustKegButton"
                            android:layout_above="@+id/adminExitButton"
                            android:textSize="36sp" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Exit"
                            android:id="@+id/adminExitButton"
                            android:layout_gravity="left|bottom"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignEnd="@+id/newKegButton"
                            android:textSize="@dimen/abc_text_size_display_2_material"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Custom Sounds"
                            android:id="@+id/textView5"
                            android:textAlignment="center"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignBottom="@+id/adjustKegButton"
                            android:layout_toEndOf="@+id/adminModeTextView"
                            android:padding="@dimen/activity_vertical_margin" />

                        <ListView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:choiceMode="singleChoice"
                            android:id="@+id/soundsListView"
                            android:layout_alignParentEnd="true"
                            android:layout_below="@+id/textView5"
                            android:layout_alignStart="@+id/textView5"
                            android:layout_above="@+id/selSoundButton"
                            android:theme="@style/AppTheme" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="@android:dimen/notification_large_icon_height"
                            android:text="Add Sound"
                            android:id="@+id/selSoundButton"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignStart="@+id/soundsListView"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/adminTab2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ListView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/drinkersListView"
                            android:alpha="100"
                            android:visibility="visible"
                            android:layout_gravity="center_horizontal" />

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/fab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"
                            android:src="@android:drawable/ic_input_add"
                            android:tint="@android:color/black"
                            app:backgroundTint="@color/colorAccent"
                            android:visibility="visible"
                            android:layout_marginRight="@dimen/fab_margin"
                            android:layout_marginBottom="@dimen/fab_margin"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>

                </FrameLayout>

            </LinearLayout>
        </TabHost>
    </RelativeLayout>

</RelativeLayout>
