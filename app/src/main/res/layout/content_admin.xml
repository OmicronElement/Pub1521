<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tabHost"
        android:theme="@style/AppTheme">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tabStripEnabled="false"
                android:theme="@style/AppTheme"
                android:animateLayoutChanges="false"
                android:alwaysDrawnWithCache="false"
                android:fadingEdge="horizontal"/>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/adminTab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="."
                        android:id="@+id/adminModeTextView"
                        android:gravity="center_horizontal"
                        android:textSize="@dimen/abc_text_size_display_3_material"
                        android:textColor="@color/primary_material_dark"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/kegEditText"
                        android:textSize="@dimen/abc_text_size_display_3_material"
                        android:gravity="center_horizontal"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/adminModeTextView"
                        android:descendantFocusability="beforeDescendants"
                        android:focusableInTouchMode="true"
                        android:selectAllOnFocus="false" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adjust Keg Level"
                        android:id="@+id/adjustKegButton"
                        android:layout_below="@+id/kegEditText"
                        android:layout_alignParentStart="true"
                        android:layout_alignEnd="@+id/kegEditText"
                        android:textSize="@dimen/abc_text_size_display_1_material"
                        android:visibility="gone" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Keg"
                        android:id="@+id/newKegButton"
                        android:layout_below="@+id/adjustKegButton"
                        android:layout_alignParentStart="true"
                        android:layout_alignEnd="@+id/adjustKegButton"
                        android:layout_above="@+id/adminExitButton"
                        android:textSize="36sp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exit"
                        android:id="@+id/adminExitButton"
                        android:layout_gravity="left|bottom"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignEnd="@+id/newKegButton"
                        android:textSize="@dimen/abc_text_size_display_2_material"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Pour Sounds"
                        android:id="@+id/textView5"
                        android:textAlignment="center"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignBottom="@+id/adjustKegButton"
                        android:layout_toEndOf="@+id/adminModeTextView"
                        android:padding="@dimen/activity_vertical_margin" />

                    <ListView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:choiceMode="singleChoice"
                        android:id="@+id/soundsListView"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/textView5"
                        android:layout_alignStart="@+id/textView5"
                        android:layout_above="@+id/selSoundButton"
                        android:theme="@style/AppTheme" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="@android:dimen/notification_large_icon_height"
                        android:text="Add"
                        android:id="@+id/selSoundButton"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignStart="@+id/soundsListView"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/adminTab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ListView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/drinkersListView"
                        android:alpha="100"
                        android:visibility="visible"
                        android:layout_gravity="center_horizontal" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:src="@android:drawable/ic_input_add"
                        android:tint="@android:color/black"
                        app:backgroundTint="@color/colorAccent"
                        android:visibility="visible"
                        android:layout_marginRight="@dimen/fab_margin"
                        android:layout_marginBottom="@dimen/fab_margin"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

            </FrameLayout>

        </LinearLayout>
    </TabHost>

</LinearLayout>